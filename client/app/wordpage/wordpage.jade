.container
  .row
    .col-sm-12
      h1.word-title {{wordData.word}}
      button.btn.btn-primary.change-button(ng-click='editWord()' ng-show='isLoggedIn()') Change
      button.close(type='button', ng-click='deleteWord()' ng-show='isLoggedIn()') Ã—
    .col-sm-12.priority-color-border
